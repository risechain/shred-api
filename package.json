{
  "name": "shreds",
  "version": "0.2.3",
  "packageManager": "bun@1.2.16",
  "description": "Shreds client for the Rise Network.",
  "type": "module",
  "license": "MIT",
  "homepage": "https://github.com/risechain/shred-api#readme",
  "bugs": {
    "url": "https://github.com/risechain/shred-api/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/risechain/shred-api.git"
  },
  "author": "RISE Chain",
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json",
    "./viem": {
      "types": "./dist/viem/index.d.ts",
      "require": "./dist/viem/index.js",
      "import": "./dist/viem/index.js"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "lint": "eslint --cache .",
    "lint:fix": "bun run lint --fix",
    "build": "tsdown",
    "dev": "tsdown --watch",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "format": "prettier --cache --write .",
    "release": "bumpp && bun publish",
    "prepublishOnly": "bun run build"
  },
  "peerDependencies": {
    "viem": "^2.33.3"
  },
  "devDependencies": {
    "@sxzz/eslint-config": "^7.1.2",
    "@sxzz/prettier-config": "^2.2.3",
    "@types/node": "^24.2.0",
    "abitype": "^1.0.8",
    "bumpp": "^10.2.2",
    "eslint": "^9.32.0",
    "happy-dom": "^18.0.1",
    "prettier": "^3.6.2",
    "tsdown": "^0.13.3",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "prettier": "@sxzz/prettier-config",
  "trustedDependencies": [
    "unrs-resolver"
  ]
}
